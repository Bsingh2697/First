<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.boxingtournament.MainActivity">

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/LL2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TV1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="#000"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="@string/bxA"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/scoreBoxerA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="40dp" />

            <Button
                android:id="@+id/B1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#000"
                android:onClick="Straight"
                android:text="@string/SP"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/B2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="#000"
                android:onClick="Jab"
                android:text="@string/JP"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/B3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="#000"
                android:onClick="Hook"
                android:text="@string/HP"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/B4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="#000"
                android:onClick="Uppercut"
                android:text="@string/UCP"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/B5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="#000"
                android:onClick="Body"
                android:text="@string/BP"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/F1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="#000"
                android:onClick="Foul"
                android:text="@string/F"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TV3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="#EEEEEE"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="@string/bxB"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/scoreBoxerB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="40dp" />

            <Button
                android:id="@+id/B7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#EEEEEE"
                android:onClick="Straight"
                android:text="@string/SP"
                android:textStyle="bold" />

            <Button
                android:id="@+id/B8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="#EEEEEE"
                android:onClick="Jab"
                android:text="@string/JP"
                android:textStyle="bold" />

            <Button
                android:id="@+id/B9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="#EEEEEE"
                android:onClick="Hook"
                android:text="@string/HP"
                android:textStyle="bold" />

            <Button
                android:id="@+id/B10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="#EEEEEE"
                android:onClick="Uppercut"
                android:text="@string/UCP"
                android:textStyle="bold" />

            <Button
                android:id="@+id/B11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="#EEEEEE"
                android:onClick="Body"
                android:text="@string/BP"
                android:textStyle="bold" />

            <Button
                android:id="@+id/F2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="#EEEEEE"
                android:onClick="Foul"
                android:text="@string/F"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"></View>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/LL1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#546E7A"
        android:onClick="Reset"
        android:text="Reset" />


</RelativeLayout>
